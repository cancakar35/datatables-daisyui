root = true

[*]
charset = utf-8
indent_style = space
indent_size = 4
end_of_line = crlf
insert_final_newline = true
trim_trailing_whitespace = true
tab_width = 4

[*.{json,xml,config,yml}]
indent_size = 2

[*.{js,ts,html,css,mjs}]
indent_size = 2

[*.{ts,js,mjs}]
quote_type = single

[*.md]
max_line_length = off
trim_trailing_whitespace = false
